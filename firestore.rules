rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    match /admins/{userId} {
      allow get: if isSignedIn() && request.auth.uid == userId;
      allow list: if false;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update, delete: if isAdmin();
    }

    match /bloodDonationEvents/{eventId} {
      allow get, list: if true;
      allow create, delete: if isAdmin();
      allow update: if 
        isAdmin() || 
        (
          // Allow non-admins to ONLY increment the registration count by 1
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['currentRegistrations']) &&
          request.resource.data.currentRegistrations == resource.data.currentRegistrations + 1
        );
    }

    match /participants/{participantId} {
      allow create: if true;
      allow get, list, update, delete: if isAdmin();
    }
  }
}
